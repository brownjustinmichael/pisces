import os
import SCons.Conftest

include_cuda = False
include_mpi = True
include_vt = False
include_mp = True
dimensions = 2
vertical_grid = 'chebyshev'
logger = "log4cplus"
defaults = "src/defaults.yaml"

root = os.path.abspath ("..") + "/"
defaults = os.path.join (root, defaults)

env = Environment (ENV = os.environ, tools = ["default", "cxxtest"])

env.SConscript ("../src/SConscript", variant_dir = ".", duplicate = 0, exports = {"env": env, "include_cuda": include_cuda, "include_mp": include_mp, "include_vt":include_vt, "include_mpi":include_mpi, "logger": logger, "dimensions": dimensions, "vertical_grid": vertical_grid, "defaults" : defaults, "root": root})
