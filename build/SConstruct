import os
import SCons.Conftest

include_cuda = False
include_mpi = True
include_vt = False
include_mp = True
include_opencl = True
logger = "log4cplus"

env = Environment (ENV = os.environ)

env.SConscript ("../src/SConscript", variant_dir = ".", duplicate = 0, exports = {"env": env, "include_cuda": include_cuda, "include_mp": include_mp, "include_vt":include_vt, "include_opencl":include_opencl, "include_mpi":include_mpi, "logger": logger})
