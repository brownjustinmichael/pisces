Import ("env")
Import ("objects")

conf = Configure (env)

for lib in ["lapack", "blas", "atlas", "cublas"]:
    if lib not in env ['LIBS']:
        conf.CheckLib (lib)

env = conf.Finish ()

objects.append (env.Object ("utils_mpi.cpp"))

objects.append (env.Object ("utils_lapack.cpp"))

objects.append (env.Object ("utils_cublas.cu"))

objects.append (env.Object ("interpolate.cpp"))

objects.append (env.Object ("solver_lapack.cpp"))

objects.append (env.Object ("chebyshev.cpp"))

objects.append (env.Object ("io.cpp"))
