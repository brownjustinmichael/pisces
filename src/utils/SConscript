Import ("env")
Import ("objects")
Import ("include_cuda")
Import ("include_mp")

import os, inspect

conf = Configure (env)

if include_cuda:
    conf.CheckLib ("cublas")

if not conf.CheckLib ("ptlapack"):
    conf.CheckLib ("lapack")
if not conf.CheckLib ("ptf77blas"):
    conf.CheckLib ("blas")
if not conf.CheckLib ("ptcblas"):
    conf.CheckLib ("cblas")

for lib in ["atlas", "netcdf_c++4", "irc", "imf", "yaml-cpp"]:
    conf.CheckLib (lib)

env = conf.Finish ()
